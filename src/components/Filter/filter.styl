@import '../../styles/_variables'

.filter {
  background #fff
  padding 20px
  margin 10px 0
  font-size 1.5em
  color pale-text-color
  &.disabled {
    opacity: 0.7
  }

  input {
    border none
    border-bottom 2px solid primary-color
    font-style italic
    font-size 1.2em
    font-weight 300
    margin 0 5px
    width 100px
    text-align center

    &.small {
      width 70px
    }

    &:focus {
      outline none
    }
  }
}
